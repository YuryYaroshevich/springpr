<?xml verion="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
 		
    <bean id="discountService" class="com.yra.springpr.service.discount.DiscountService">
    	<constructor-arg>
    		<list>
    			<bean class="com.yra.springpr.service.discount.BirthdayDiscountStrategy" c:discount="${discount}" />
    			<bean class="com.yra.springpr.service.discount.EveryNTicketDiscountStrategy"
    				c:ref-bookingDao="bookingDao" c:N="${N}" c:discount="${discount}" />
    		</list>
    	</constructor-arg>
    </bean>
    
</beans>